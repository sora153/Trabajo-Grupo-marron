@model Trabajo.Models.Contacto
@{
    ViewData["Title"] = "Contacto";
}

<div class="container">
    <h1 class="text-center mb-4">Formulario de reclamo</h1>
    <h4 class="text-center mb-4">¿Algún reclamo deja tus datos y nos pondremos en contacto contigo?</h4>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Contacto" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CorreoElectronico" class="control-label"></label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                </div>
                <br>
                <div class="form-group text-center d-grid gap-2">
                    <button type="submit" class="btn btn-dark">Enviar</button>
                </div>
            </form>
        </div>
    </div>
    <br>
    <img src="https://cdn-icons-png.flaticon.com/512/88/88255.png" class="img-fluid rounded float-end" alt="..." style="width: 25%; height:20%;">
</div>