@model IEnumerable<Trabajo.Models.Producto>
@{
    ViewData["Title"] = "Catalogo";  
}
<br>
<h1>@ViewData["Title"]</h1>
<br>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" style="width: 100px; max-width: 100%; height: 100px"
                       src="@item.ImageName" alt="@item.ImageName"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                   <p class="card-text">S/@Html.DisplayFor(modelItem => item.Precio)</p>
                  <a class="btn btn-dark btn-lg" asp-action="Details" asp-route-id="@item.Id">Ver más</a>
                  <a class="btn btn-danger btn-lg" asp-action="Add" asp-route-id="@item.Id">Añadir al Carrito</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>