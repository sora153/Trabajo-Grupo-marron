@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item">
        <form asp-controller="Catalogo" asp-action="Index">
            <div class="input-group mb-1">
                <input class="form-control" type="text" placeholder="Buscar Producto" name="searchString">
                <button class="btn btn-outline-light" type="submit" value="Buscar"><i class="fa-solid fa-magnifying-glass"></i> </button>

            </div>
        </form>
    </li>


    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form asp-controller="Proforma" asp-action="Index">
                <div class="input-group mb-1">

                    <button class="btn btn-outline-light" type="submit" value="Carrito" style="margin-left: 10px;"><i class="fa-solid fa-cart-shopping"></i></button>
                </div>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user" style="margin-left: 60px;"></i>@User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white"><i class="fa-solid fa-arrow-right-from-bracket" style="width: 20px; height: 20px; margin-left: -50px;"></i></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">iniciar sesion </a>
        </li>
    }
</ul>
