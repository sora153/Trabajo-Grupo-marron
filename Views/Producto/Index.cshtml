@model IEnumerable<Trabajo.Models.Producto>


@{
    ViewData["Title"] = "Index";
}
<br>
<h1>Productos</h1>
<br>
<p>
    <a asp-action="Create" class="textP"><i class="fa-solid fa-square-plus" style="color: #031E49; width: 25px; height: 25px; margin-right: 5px;"></i>AÃ±adir Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcentajeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PorcentajeDescuento)
            </td>
            <td>
                <img src="@Html.DisplayFor(model => item.ImageName)" alt="Imagen del producto" style="width: 100px; height: 130px;"/> 
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square" style="color: 81C4FF; width: 25px; height: 25px;"></i></a> 
                <br>
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-paperclip" style="color: #031E49; width: 25px; height: 25px;"></i></a> 
                <br>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt" style="color: EE0405; width: 25px; height: 25px;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>