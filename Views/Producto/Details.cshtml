@model Trabajo.Models.Producto
<body style="background-color: rgba(192, 192, 192, 0.815);"></body>

@{
    ViewData["Title"] = "Details";
}


<br>
<h1>Detalle</h1>
<br>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PorcentajeDescuento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PorcentajeDescuento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageName)" alt="Imagen del producto" style="width: 100px; height: 130px;"/>    
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="textP"><i class="fa-solid fa-arrow-left-long" style="color: #031E49; width: 25px; height: 25px; margin-right: 5px;"></i>Volver</a>
    <i class="fa-solid fa-grip-lines-vertical" style="color: black; width: 25px; height: 25px; margin-left: 5px;"></i>
    <a asp-action="Edit" class="textP1" asp-route-id="@Model?.Id"><i class="fa-solid fa-pen-to-square" style="color: 81C4FF; width: 25px; height: 25px; margin-left: 5px;"></i>Editar</a> 
</div>